---
import Member from "./Team/Member.astro";

interface Props {
  data:{
    title: string;
    content: string[];
    members: {
    fullName: string;
    role: string;
    imageUrl: string;
    links: {
      name: string;
      url: string;
      }[];
    }[];
  }
}
const { data } = Astro.props;
---

<section id="team" class="relative py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
  <!-- Background avec gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900/20 via-pink-900/20 to-secondary-900/20 rounded-3xl"></div>
  
  <div class="relative">
    <div class="mx-auto max-w-screen-sm text-center mb-12 lg:mb-16 fade-in-on-scroll">
      <h2
        class="mb-6 text-4xl lg:text-5xl tracking-tight font-extrabold bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent"
        set:html={data.title}
      />
      <p class="font-light sm:text-xl text-gray-300" set:html={data.content} />
    </div>
    <div
      class="grid gap-8 lg:gap-12 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
    >
      {
        data.members.map(
          (member: {
            fullName: string;
            role: string;
            imageUrl: string;
            links: { name: string; url: string }[];
          }, index: number) => (
            <div class="fade-in-on-scroll" style={`animation-delay: ${index * 0.1}s;`}>
              <Member
                fullName={member.fullName}
                role={member.role}
                imageUrl={member.imageUrl}
                links={member.links}
              />
            </div>
          )
        )
      }
    </div>
  </div>
</section>
