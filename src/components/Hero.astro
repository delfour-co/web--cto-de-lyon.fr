---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";

interface Props {
  data: {
    title: string;
    content: string[];
    action: {
    title: string;
      url: string;
    };
  };
}
const { data } = Astro.props;
---

<section id="hero" class="relative overflow-hidden">
  <!-- Background gradient animé -->
  <div class="hidden dark:block absolute inset-0 bg-gradient-to-br from-primary-900/30 via-pink-900/20 to-secondary-900/30 animate-gradient"></div>
  
  <!-- Éléments décoratifs flottants -->
  <div class="hidden dark:block absolute top-20 left-10 w-72 h-72 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float"></div>
  <div class="hidden dark:block absolute top-40 right-10 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 1s;"></div>
  <div class="hidden dark:block absolute -bottom-8 left-1/2 w-72 h-72 bg-secondary-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 2s;"></div>

  <div
    class="relative grid max-w-screen-xl px-4 py-16 mx-auto lg:gap-8 xl:gap-0 lg:py-24 lg:grid-cols-12"
  >
    <div class="mt-0 flex lg:hidden justify-center animate-scale-in">
      <div class="relative">
        <Image
          src={logo}
          alt="Logo de la communauté des CTO de Lyon"
          class="w-2/3 mx-auto drop-shadow-2xl"
          decoding="async"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-pink-400 rounded-full blur-2xl opacity-30 animate-pulse-slow"></div>
      </div>
    </div>
    
    <div class="mr-auto place-self-center lg:col-span-7 fade-in-on-scroll">
      <h1
        class="max-w-2xl mb-6 text-4xl font-extrabold tracking-tight leading-tight md:text-5xl xl:text-6xl bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent"
        set:html={data.title}
      />
      <p class="max-w-2xl mb-8 font-light lg:mb-10 md:text-lg lg:text-xl text-gray-300 dark:text-gray-300 text-gray-800">
        {data.content}
      </p>

      <a
        href={data.action.url}
        class="group inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white rounded-xl bg-gradient-to-r from-primary-600 to-pink-500 hover:from-primary-700 hover:to-pink-600 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 relative overflow-hidden"
        target="_blank"
      >
        <span class="relative z-10">{data.action.title}</span>
        <svg class="w-5 h-5 ml-2 relative z-10 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
        <div class="absolute inset-0 bg-gradient-to-r from-pink-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </a>
    </div>
    
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex items-center justify-center fade-in-on-scroll">
      <div class="relative">
        <Image 
          src={logo} 
          alt="Logo de la communauté des CTO de Lyon"
          class="drop-shadow-2xl animate-float"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-pink-400 rounded-full blur-3xl opacity-40 animate-pulse-slow -z-10"></div>
      </div>
    </div>
  </div>
</section>
