---
const { data } = Astro.props;
---

<section id="events" class="relative py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
  <div class="relative">
    <div class="mx-auto max-w-screen-sm text-center mb-12 lg:mb-16 fade-in-on-scroll">
      <h2
        class="mb-6 text-3xl lg:text-5xl tracking-tight font-extrabold bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent"
        set:html={data.title}
      />
      <p
        class="font-light text-gray-300 sm:text-xl"
        set:html={data.content}
      />
    </div>
    <div class="glass rounded-2xl p-2 lg:p-4 shadow-2xl border border-white/10 fade-in-on-scroll">
      <div class="relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-primary-600 to-pink-600 rounded-2xl blur opacity-25 animate-pulse-slow"></div>
        <iframe
          src="https://lu.ma/embed/calendar/cal-kZVcuAvB6h8seC2/events"
          class="relative w-full h-auto mb-4 min-h-[450px] rounded-xl"
          style="overflow: hidden; border: none;"
          allowfullscreen=""
          aria-hidden="false"
          tabindex="0"
        ></iframe>
      </div>
    </div>
  </div>
</section>
