---
interface Props {
  data: {
    title: string;
  items: {
    title: string;
    content: string;
  }[];
  };
}
const { data } = Astro.props;
---

<section class="relative py-16 px-4 mx-auto max-w-screen-xl sm:py-24 lg:px-6">
  <div class="max-w-screen-md mx-auto mb-12 lg:mb-16 fade-in-on-scroll">
      <h2
        class="mb-4 text-4xl lg:text-5xl tracking-tight font-extrabold bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent text-center"
        set:html={data.title}
      />
  </div>
  <div
    class="grid gap-6 md:grid-cols-2 lg:grid-cols-3"
  >
    {
      data.items.map((item, index) => (
        <div class="glass rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 card-3d fade-in-on-scroll group border-l-4 border-primary-500" style={`animation-delay: ${index * 0.1}s;`}>
          <h3
            class="mb-3 text-xl font-bold text-white group-hover:text-primary-400 transition-colors"
            set:html={item.title}
          />
          <p
            class="text-gray-300 leading-relaxed"
            set:html={item.content}
          />
        </div>
      ))
    }
  </div>
</section>
