---
interface Props {
  data:{
    title: string;
    content: string[];
  }
}
const { data} = Astro.props;
---

<section class="relative py-16 px-4 mx-auto max-w-screen-xl sm:py-24 lg:px-6">
  <div class="max-w-screen-lg mx-auto fade-in-on-scroll">
    <div class="glass rounded-2xl p-8 lg:p-12 shadow-xl backdrop-blur-lg">
      <h2
        class="mb-6 text-4xl lg:text-5xl tracking-tight font-extrabold bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent"
        set:html={data.title}
      />
      <div class="space-y-6">
        {
          data.content.map((content: unknown, index: number) => (
            <p class="font-light sm:text-xl text-gray-300 leading-relaxed" style={`animation-delay: ${index * 0.1}s;`}>
              {content}
            </p>
          ))
        }
      </div>
    </div>
  </div>
</section>
