---
interface Props {
  data: {
    title: string;
    content: string[];
    action: {
      title: string;
      url: string;
    };
    privacyPolicy: {
      content: string;
      label: string;
      url: string;
    };
  };
}
const { data } = Astro.props;
---

<section id="join-us" class="relative py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
  <!-- Background avec gradient -->
  <div class="hidden dark:block absolute inset-0 bg-gradient-to-br from-gray-900 via-primary-900/50 to-gray-900 rounded-3xl"></div>
  <div class="hidden dark:block absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(139,92,246,0.15),transparent_50%)]"></div>
  
  <div class="relative">
    <div class="mx-auto max-w-screen-md sm:text-center fade-in-on-scroll">
      <h2
        class="mb-6 text-3xl lg:text-5xl tracking-tight font-extrabold text-gray-900 dark:text-white"
        set:html={data.title}
      />
      <p
        class="mx-auto mb-10 max-w-2xl font-light md:mb-12 sm:text-xl text-gray-800 dark:text-white/90"
        set:html={data.content}
      />
      <div class="items-center justify-center sm:flex sm:space-y-0 mb-6">
        <a
          href={data.action.url}
          target="_blank"
          id="join-button"
          class="group inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-primary-600 dark:text-primary-600 bg-white dark:bg-white rounded-xl hover:bg-gray-50 dark:hover:bg-gray-50 focus:ring-4 focus:ring-white/50 dark:focus:ring-white/50 focus:ring-primary-200 shadow-2xl transform hover:scale-105 transition-all duration-300 relative overflow-hidden"
        >
          <span class="relative z-10">{data.action.title}</span>
          <svg class="w-5 h-5 ml-2 relative z-10 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
          <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-pink-400 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>
      </div>
      <p class="text-sm text-gray-700 dark:text-white/80">
        {data.privacyPolicy.content}
        <br />
        <a
          href={data.privacyPolicy.url}
          class="font-medium text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-white/80 underline transition-colors"
          >{data.privacyPolicy.label}</a
        >.
      </p>
    </div>
  </div>
  
  <script is:inline>
    // Animation de confetti au clic (seulement si les animations ne sont pas réduites)
    document.addEventListener('DOMContentLoaded', () => {
      const button = document.getElementById('join-button');
      if (button && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        button.addEventListener('click', function() {
          // Créer des particules de confetti
          for (let i = 0; i < 20; i++) {
            const confetti = document.createElement('div');
            confetti.style.position = 'fixed';
            confetti.style.left = Math.random() * 100 + '%';
            confetti.style.top = '-10px';
            confetti.style.width = '10px';
            confetti.style.height = '10px';
            confetti.style.backgroundColor = ['#8B5CF6', '#EC4899', '#06B6D4', '#F59E0B'][Math.floor(Math.random() * 4)];
            confetti.style.borderRadius = '50%';
            confetti.style.pointerEvents = 'none';
            confetti.style.zIndex = '9999';
            confetti.style.animation = 'confetti 2s ease-out forwards';
            document.body.appendChild(confetti);
            
            setTimeout(() => confetti.remove(), 2000);
          }
        });
      }
    });
  </script>
</section>
