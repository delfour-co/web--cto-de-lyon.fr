---
interface Props {
  data:{

    title: string;
    content: string[];
    items: {
      title: string;
      content: string;
      icon: string;
    }[];
  }
}
const { data } = Astro.props;
---

<section id="mission" class="relative py-16 px-4 mx-auto max-w-screen-xl sm:py-24 lg:px-6">
  <!-- Background avec gradient -->
  <div class="hidden dark:block absolute inset-0 bg-gradient-to-br from-primary-900/20 via-pink-900/20 to-secondary-900/20 rounded-3xl"></div>
  
  <div class="relative">
    <div class="max-w-screen-lg mx-auto mb-12 lg:mb-16 fade-in-on-scroll">
      <h2
        class="mb-6 text-4xl lg:text-5xl tracking-tight font-extrabold bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent text-center"
        set:html={data.title}
      />
      <p class="sm:text-xl text-gray-300 dark:text-gray-300 text-gray-800 text-center max-w-3xl mx-auto">
        {data.content}
      </p>
    </div>
    <div
      class="grid gap-8 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        data.items.map((item: { icon: any; title: any; content: unknown }, index: number) => (
          <div class="glass rounded-2xl p-6 lg:p-8 shadow-lg hover:shadow-xl transition-all duration-300 card-3d fade-in-on-scroll group" style={`animation-delay: ${index * 0.1}s;`}>
            <div
              class="flex justify-center items-center mb-6 w-16 h-16 lg:w-20 lg:h-20 rounded-2xl bg-gradient-to-br from-primary-500 to-pink-500 p-4 text-white group-hover:scale-110 transition-transform duration-300"
              set:html={item.icon}
            />
            <h3 class="mb-3 text-xl font-bold text-white dark:text-white text-gray-900" set:html={item.title} />
            <p class="text-gray-300 dark:text-gray-300 text-gray-800 leading-relaxed">{item.content}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
