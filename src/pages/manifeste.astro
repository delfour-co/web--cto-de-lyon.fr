---
import { getEntry } from "astro:content";
import DefaultLayout from "../layouts/DefaultLayout.astro";
const content = await getEntry("datas", "manifeste/content");
---

<DefaultLayout title={content.data.title}>
  <section class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-on-scroll">
      <h1 class="text-4xl lg:text-5xl font-extrabold mb-6 bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent">
        {content.data.title}
      </h1>
      <p class="text-xl text-gray-300 dark:text-gray-300 text-gray-800 mb-4">{content.data.subtitle}</p>
      <div class="text-sm text-gray-400 dark:text-gray-400 text-gray-700">
        Dernière mise à jour : <span class="font-semibold text-gray-300 dark:text-gray-300 text-gray-800">{content.data.lastUpdated}</span>
      </div>
    </div>

    <!-- Introduction -->
    <div class="mb-16 fade-in-on-scroll">
      <div class="glass rounded-2xl p-8 lg:p-12 shadow-xl backdrop-blur-lg">
        <div class="space-y-4">
          {content.data.introduction.content.map((paragraph: string, index: number) => (
            <p class="mb-4 text-lg text-gray-300 dark:text-gray-300 text-gray-800 leading-relaxed">{paragraph}</p>
          ))}
        </div>
      </div>
    </div>

    <!-- Principles -->
    <div class="space-y-8 mb-16">
      {content.data.principles.map((principle: any, index: number) => (
        <div class="fade-in-on-scroll" style={`animation-delay: ${index * 0.1}s;`}>
          <div class="glass rounded-xl p-6 lg:p-8 shadow-lg hover:shadow-xl transition-all duration-300 card-3d border-l-4 border-primary-500">
            <h2 class="text-2xl lg:text-3xl font-bold mb-4 text-white dark:text-white text-gray-900">{principle.title}</h2>
            <div class="space-y-4">
              {principle.content.map((paragraph: string) => (
                <p class="mb-4 text-lg text-gray-300 dark:text-gray-300 text-gray-800 leading-relaxed">{paragraph}</p>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Commitment -->
    <div class="mb-16 fade-in-on-scroll">
      <div class="glass rounded-2xl p-8 lg:p-12 shadow-xl backdrop-blur-lg">
        <h2 class="text-2xl lg:text-3xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent">
          {content.data.commitment.title}
        </h2>
        <div class="space-y-4">
          {content.data.commitment.content.map((paragraph: string) => (
            <p class="mb-4 text-lg text-gray-300 dark:text-gray-300 text-gray-800 leading-relaxed">{paragraph}</p>
          ))}
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="text-center fade-in-on-scroll">
      <div class="glass rounded-2xl p-8 lg:p-12 shadow-xl backdrop-blur-lg">
        <h2 class="text-2xl lg:text-3xl font-bold mb-4 bg-gradient-to-r from-primary-400 via-pink-400 to-secondary-400 bg-clip-text text-transparent">
          {content.data.contact.title}
        </h2>
        <p class="text-lg mb-8 text-gray-300 dark:text-gray-300 text-gray-800">{content.data.contact.content}</p>
        <a
          href={content.data.contact.action.url}
          class="group inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white rounded-xl bg-gradient-to-r from-primary-600 to-pink-500 hover:from-primary-700 hover:to-pink-600 focus:ring-4 focus:ring-primary-300 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 relative overflow-hidden"
        >
          <svg class="w-5 h-5 mr-2 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="relative z-10">{content.data.contact.action.title}</span>
          <div class="absolute inset-0 bg-gradient-to-r from-pink-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
      </div>
    </div>
  </section>
</DefaultLayout>

